
SOURCE_FOLDER := ../SOURCE
CLASS_FOLDER := ../CLASS
BINARY_FOLDER := ../BINARY

SOURCE_PROGRAMS := $(wildcard $(SOURCE_FOLDER)/*.java)
CLASS_PROGRAMS := $(patsubst $(SOURCE_FOLDER)/%.java, $(CLASS_FOLDER)/%.class, $(SOURCE_PROGRAMS))

COMPILOR := javac
EXECUTER := java

%:
	$(COMPILOR) -d $(CLASS_FOLDER) $(SOURCE_PROGRAMS)
	$(EXECUTER) -cp $(CLASS_FOLDER) $@
